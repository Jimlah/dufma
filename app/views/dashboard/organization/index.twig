{% extends "layouts/dashboard.twig" %}

{% block title %}
	Dashboard
{% endblock %}

{% block style %}
	{{css('jquery-jvectormap-1.2.2')}}
{% endblock %}

{% block main %}

	<div class="content-page">
		<div
			class="content">

			<!-- start page title -->
			{{get_alert()}}
			<div class="row">
				<div class="col-12">
					<div class="page-title-box">
						<div class="page-title-right">
							<form class="form-inline">
								<div class="form-group">
									<div class="input-group">
										<input type="text" class="form-control form-control-light" id="dash-daterange">
										<div class="input-group-append">
											<span class="input-group-text bg-primary border-primary text-white">
												<i class="mdi mdi-calendar-range font-13"></i>
											</span>
										</div>
									</div>
								</div>
								<a href="javascript: void(0);" class="btn btn-primary ml-2">
									<i class="mdi mdi-autorenew"></i>
								</a>
							</form>
						</div>
						<h4 class="page-title">Analytics</h4>
					</div>
				</div>
			</div>
			<!-- end page title -->

			<div class="row">
				<div class="col-xl-3 col-lg-4">
					<div class="card tilebox-one">
						<div class="card-body">
							<i class='uil uil-users-alt float-right'></i>
							<h6 class="text-uppercase mt-0">Active Users</h6>
							<h2 class="my-2" >{{usernum}}</h2>
							<p class="mb-0 text-muted">
								<span class="text-success mr-2">
									<span class="mdi mdi-arrow-right-thin-circle-outline"></span>
									Last Registered: {{lastuser.created_at | date('D M y')}}</span>
								<span class="text-nowrap">{{lastuser.username}}</span>
							</p>
						</div>
						<!-- end card-body-->
					</div>
					<!--end card-->

					<div class="card tilebox-one">
						<div class="card-body">
							<i class='uil uil-user-square'></i>
							<h6 class="text-uppercase mt-0">Total Workers</h6>
							<h2 class="my-2">{{worker}}</h2>
							<p class="mb-0 text-muted">
								<span class="text-success mr-2">
									<span class="mdi mdi-arrow-right-thin-circle-outline"></span>
									Last Added: {{lastworker.created_at | date('D M y')}}</span>
								<span class="text-nowrap">{{lastworker.firstname}}</span>
							</p>
						</div>
						<!-- end card-body-->
					</div>
					<!--end card-->

					<div class="card cta-box overflow-hidden">
						<div class="card-body">
							<div class="media align-items-center">
								<div class="media-body">
									<h3 class="m-0 font-weight-normal cta-box-title">Enhance your
										<b>Campaign</b>
										for better outreach
										<i class="mdi mdi-arrow-right"></i>
									</h3>
								</div>
								<img class="ml-3" src="assets/images/email-campaign.svg" width="92" alt="Generic placeholder image">
							</div>
						</div>
						<!-- end card-body -->
					</div>
				</div>
				<!-- end col -->

				<div class="col-xl-9 col-lg-8">

					<div class="card">
						<div class="card-body">
							<h4 class="header-title mb-4">Asset Chart</h4>

							<div class="mt-3 chartjs-chart" style="height: 320px;">
								<canvas id="donut-chart-example" data-colors="{{assetTableColor}}" data-value="{{assetTableSum}}", data-name="{{assetTable}}"></canvas>
							</div>
						</div>
						<!-- end card body-->
					</div>
					<!-- end card -->
				</div>
				<!-- end col-->
			</div>

		</div>
		<!-- End Content -->


	</div>
	<!-- content-page -->


{% endblock %}


{% block js %}

	<!-- third party js -->
	{{jscript('vendor/apexcharts.min')}}
	{{jscript('vendor/jquery-jvectormap-1.2.2.min')}}
	{{jscript('vendor/jquery-jvectormap-world-mill-en')}}
	{{jscript('vendor/Chart.bundle.min')}}
	<!-- third party js ends -->

	<!-- demo app -->
{{jscript('pages/demo.chartjs')}}
{{jscript('pages/demo.dashboard-analytics')}}
	<!-- end demo js-->
{% endblock %}
